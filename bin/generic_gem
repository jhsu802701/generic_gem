#!/usr/bin/env ruby

require 'generic_gem'


  puts "***********************"
  puts "Welcome to Generic Gem!"
  puts
  puts "DEFAULT VALUE: tmp1"
  puts "Enter the directory name you wish to use for your generic app:"
  subdir_name = gets.chomp
  if subdir_name == ""
    subdir_name = "tmp1"
  end
  puts
  puts "DEFAULT VALUE: Marie Curie"
  puts "Enter your name:"
  your_name = gets.chomp
  puts your_name
  if your_name == ""
    your_name = "Marie Curie"
  end
  puts your_name

  puts
  puts "DEFAULT VALUE: mcurie@example.com"
  puts "Enter your email address:"
  your_email = gets.chomp
  if your_email == ""
    your_email = "mcurie@example.com"
  end

  puts subdir_name
  puts your_name
  puts your_email



GenericGem.create(subdir_name, your_name, your_email)
system("cd #{subdir_name} && sh gem_test.sh")

